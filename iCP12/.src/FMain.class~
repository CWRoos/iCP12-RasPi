Public Sub CheckBox1_Click()
  
  If isopen == 0 Then Return
  If CheckBox1.value Then
    icp12("(PUBe)")
    icp12("(PUBw:11111111)")
  Else
    icp12("(PUBd)")
  Endif
  
End

Public Sub CheckBox3_Click()
  
  Dim s As String
  
  If isopen == 0 Then Return
  If CheckBox3.value Then
    icp12("(PM1e)")
    s = Format$(Slider3.value, "0##k")
    s = "(PM1f:" & s & ")"
    icp12(s)
    s = Format$(Slider1.value * 1023 / 100, "0###")
    s = "(PM1r:" & s & ")"
    icp12(s)
  Else
    icp12("(PM1d)")
  Endif
  
End

Public Sub CheckBox2_Click()
  
  Dim s As String
  
  If isopen == 0 Then Return
  If CheckBox2.value Then
    icp12("(PM2e)")
    s = Format$(Slider3.value, "0##k")
    s = "(PM2f:" & s & ")"
    icp12(s)
    s = Format$(Slider2.value * 1023 / 100, "0###")
    s = "(PM2r:" & s & ")"
    icp12(s)
  Else
    icp12("(PM2d)")
  Endif
  
End

Public Sub Slider1_Change()
  
  Dim s As String
  
  Procentc0.text = Slider1.value & "%"
  If isopen == 0 Then Return
  If CheckBox2.value Then
    s = Format$(Slider1.value * 1023 / 100, "0###")
    s = "(PM2r:" & s & ")"
    icp12(s)
  Endif
  
End

Public Sub Slider2_Change()
  
  Dim s As String
  
  Procentc1.text = Slider2.value & "%"
  If isopen == 0 Then Return
  If CheckBox3.value Then
    s = Format$(Slider2.value * 1023 / 100, "0###")
    s = "(PM1r:" & s & ")"
    icp12(s)
  Endif
  
End

Public Sub Slider3_Change()
  
  Dim s As String
  
  Frequency.text = Slider3.value & "k"
  If isopen == 0 Then Return
  If CheckBox3.value Then
    s = Format$(Slider3.value, "0##k")
    s = "(PM2f:" & s & ")"
    icp12(s)
  Endif
  If CheckBox3.value Then
    s = Format$(Slider3.value, "0##k")
    s = "(PM1f:" & s & ")"
    icp12(s)
  Endif
  
End

Public Sub Button2_Click()
  
  Form1.show
  
End

Public Sub Form_Activate()

  Open_Click()

End
